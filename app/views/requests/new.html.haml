      .col-xs-12.col-md-6
        .form-container
          .form-wrapper
            = simple_form_for @request do |f|
              = f.error_notification
              = f.input :name
              = f.input :email, input_html: { autocomplete: 'email' }
              = f.input :phone
              = f.input :biography
              = f.input :state, :as => :hidden, :input_html => { :value => "unconfirmed" }
              = f.button :submit, 'Join the waiting list',class: "btn-primary"
