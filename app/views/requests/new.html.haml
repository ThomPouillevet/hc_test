.banner{:style => "background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1527192491265-7e15c55b1ed2?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80);"}
  .container.banner-container
    .title-container
      %h1 A new coworking space in Paris!
      %p Limited capacity, first to join, first welcome!
    .form-container
      .form-wrapper
        = simple_form_for @request do |f|
          = f.error_notification
          = f.input :name
          = f.input :email, input_html: { autocomplete: 'email' }
          = f.input :phone
          = f.input :biography
          = f.input :state, :as => :hidden, :input_html => { :value => "unconfirmed" }
          = f.button :submit, 'Join the waiting list',class: "btn-primary"



